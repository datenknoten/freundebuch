{
  "name": "freundebuch2",
  "version": "2.50.5",
  "private": true,
  "type": "module",
  "description": "Freundebuch - A digital friendship book for adults",
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "build": "pnpm --filter @freundebuch/shared run build && pnpm --filter !@freundebuch/shared --recursive run build",
    "test": "pnpm --recursive run test && pnpm run test:php",
    "test:php": "cd apps/sabredav && ./vendor/bin/phpunit",
    "test:unit": "pnpm --recursive run test:unit",
    "test:integration": "pnpm --recursive run test:integration",
    "test:e2e": "pnpm --recursive run test:e2e",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "type-check": "pnpm --filter @freundebuch/shared run build && pnpm --recursive run type-check",
    "migrate": "pnpm --filter backend run migrate",
    "migrate:build": "tsc --project database/tsconfig.json",
    "migrate:prod": "node node_modules/node-pg-migrate/bin/node-pg-migrate.js --decamelize --migrations-dir database/dist up",
    "migrate:create": "pnpm --filter backend run migrate:create",
    "pgtyped": "pnpm --filter backend run pgtyped",
    "pgtyped:watch": "pnpm --filter backend run pgtyped:watch",
    "seed": "pnpm --filter backend run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prepare": "husky && pnpm --filter frontend run sync",
    "release": "semantic-release",
    "version:sync": "node scripts/sync-versions.mjs",
    "generate:assets": "node scripts/generate-logo-assets.mjs"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "node-pg-migrate": "8.0.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,svelte,css,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "apps/frontend/**/*.{ts,js,svelte}": [
      "bash -c 'pnpm --filter frontend run type-check'",
      "bash -c 'pnpm --filter frontend run build'"
    ],
    "apps/backend/**/*.{ts,js}": [
      "bash -c 'pnpm --filter backend run type-check'",
      "bash -c 'pnpm --filter backend run build'"
    ],
    "packages/shared/**/*.{ts,js}": [
      "bash -c 'pnpm --filter @freundebuch/shared run build'",
      "bash -c 'pnpm run type-check'"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/pg": "8.16.0",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "pg": "8.16.3",
    "semantic-release": "24.2.5",
    "sharp": "0.34.5",
    "typescript": "5.9.3"
  }
}

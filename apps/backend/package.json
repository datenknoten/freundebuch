{
  "name": "@freundebuch/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node --env-file=../../.env dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "migrate": "tsx --env-file=../../.env node_modules/node-pg-migrate/bin/node-pg-migrate.js --decamelize --migrations-dir ../../database/migrations up",
    "migrate:down": "tsx --env-file=../../.env node_modules/.bin/node-pg-migrate --decamelize --migrations-dir ../../database/migrations down",
    "migrate:create": "tsx --env-file=../../.env node_modules/.bin/node-pg-migrate --decamelize --migrations-dir ../../database/migrations create",
    "pgtyped": "pgtyped -c pgtyped.config.json",
    "pgtyped:watch": "pgtyped -c pgtyped.config.json -w",
    "seed": "tsx --env-file=../../.env src/scripts/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "1.19.5",
    "@pgtyped/runtime": "2.4.2",
    "arktype": "2.1.22",
    "bcrypt": "6.0.0",
    "hono": "4.9.10",
    "jsonwebtoken": "9.0.2",
    "pg": "8.16.3",
    "pino": "10.0.0",
    "pino-http": "11.0.0",
    "pino-pretty": "13.1.1",
    "rate-limiter-flexible": "9.0.1"
  },
  "devDependencies": {
    "@pgtyped/cli": "2.4.3",
    "@testcontainers/postgresql": "11.7.2",
    "@types/bcrypt": "6.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.7.0",
    "@types/pg": "8.15.5",
    "@types/supertest": "6.0.3",
    "node-pg-migrate": "8.0.3",
    "supertest": "7.1.4",
    "testcontainers": "11.7.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "3.2.4"
  }
}
